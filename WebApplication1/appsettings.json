{
  "Rumman": {
    "TimeoutInSecs": 3
  },
  "GitHub": {
    "TimeoutInSecs": 3,

    "RetryCount": 2,
    "MedianFirstRetryDelayInSecs": 1,

    "FailureThreshold": 0.5,
    "SamplingDurationInSecs": 60,
    "MinimumThroughput": 30,
    "DurationOfBreakInSecs": 30
  },
  "HttpClients": {
    "Default": {
      "TimeoutPolicy": {
        "TimeoutInSecs": 1
      },
      "RetryPolicy": {
        "RetryCount": 4,
        "MedianFirstRetryDelayInSecs": 2,
        "TimeoutPerRetryInSecs": 1
      },
      "CircuitBreakerPolicy": {
        "FailureThreshold": 0.4,
        "SamplingDurationInSecs": 60,
        "MinimumThroughput": 30,
        "DurationOfBreakInSecs": 30
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
